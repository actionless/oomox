root="$(readlink -f $(dirname "$0"))"
darker() {
	${root}/scripts/darker.sh $@
}
get_color () {
	xrdb -query | grep "$1:" | cut -f2 | sed -r 's/#//' | head -n 1
}
color () {
	get_color color$1
}
color_bg () {
	get_color "*background"
}
color_fg () {
	get_color "*foreground"
}

   NAME="follow xresources theme"
  NOGUI=True
     BG=$(color 7)
     FG=$(color 0)
 SEL_BG=$(color 4)
 SEL_FG=$(color 15)
 TXT_BG=$(color_fg)
 TXT_FG=$(color_bg)
MENU_BG=$(color_bg)
MENU_FG=$BG
# BTN_BG=$(color 8)
# BTN_FG=$(color 15)
 BTN_BG=$(darker $BG 20)
 BTN_FG=$(darker $FG 20)
 HDR_BTN_BG=$(darker $MENU_BG -20)
 HDR_BTN_FG=$MENU_FG
ICONS_LIGHT_FOLDER=$(color 12)
ICONS_LIGHT=$(color 14)
ICONS_MEDIUM=$(color 6)
ICONS_DARK=$(color 4)
